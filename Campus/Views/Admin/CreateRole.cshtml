@model CreateRoleViewModel
@{
    ViewBag.Title = "创建角色";
}
@section style {
    <link rel="stylesheet" type="text/css" href="~/css/login_or_register.css" />
}
<div class="container-fluid">
    <p class="text-danger"><h3>创建角色</h3></p>
    <form asp-controller="admin" asp-action="CreateRole" method="post">
        <div class="form-group">
            <label asp-for="RoleName"></label>
            <input asp-for="RoleName" class="form-control" placeholder="RoleName"/>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default">创建角色</button>
        </div>
    </form>
    <div asp-validation-summary="All" class="text-danger"></div>
</div>
@section script{
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>
}